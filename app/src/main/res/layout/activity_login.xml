<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:contentDescription="@string/app_name"
        android:paddingTop="@dimen/margin_8"
        android:paddingBottom="@dimen/margin_16"
        android:src="@drawable/img_logo_blue" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@drawable/bg_login"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:elevation="@dimen/margin_2"
            android:orientation="vertical"
            android:paddingStart="@dimen/margin_32"
            android:paddingTop="@dimen/margin_8"
            android:paddingEnd="@dimen/margin_32"
            android:paddingBottom="@dimen/margin_8">

            <EditText
                android:id="@+id/edId"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:background="@drawable/bg_edit_text_none"
                android:drawableEnd="@drawable/img_id"
                android:fontFamily="@font/avenir_next"
                android:hint="@string/hint_id_number"
                android:importantForAutofill="no"
                android:inputType="numberSigned"
                android:maxWidth="300dp"
                android:paddingStart="@dimen/margin_12"
                android:paddingEnd="@dimen/margin_12"
                android:textSize="15sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:layout_marginTop="@dimen/margin_12"
                android:background="@android:color/transparent"
                app:endIconMode="password_toggle"
                app:endIconTint="@android:color/darker_gray"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_edit_text_none"
                    android:fontFamily="@font/avenir_next"
                    android:hint="@string/hint_pass"
                    android:importantForAutofill="no"
                    android:inputType="textPassword"
                    android:maxWidth="300dp"
                    android:paddingStart="@dimen/margin_12"
                    android:paddingEnd="@dimen/margin_12"
                    android:textSize="15sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_12"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbTerms"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/margin_4"
                    android:buttonTint="@android:color/white"
                    android:minWidth="48dp"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/txt_12" />

                <TextView
                    android:id="@+id/tvTerms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/margin_8"
                    android:textSize="@dimen/txt_14" />
            </LinearLayout>

            <Button
                android:id="@+id/btnEnter"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_50"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_12"
                android:background="@drawable/bg_button_clear"
                android:elevation="5dp"
                android:fontFamily="@font/giveahoot"
                android:paddingStart="@dimen/margin_32"
                android:paddingEnd="@dimen/margin_32"
                android:text="@string/btn_enter"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/llFinger"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_12"
                android:background="@color/white"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/btnFinger"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_8"
                    android:background="@android:color/white"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerInside"
                    android:src="@drawable/btn_huella" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="3"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="@dimen/margin_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/avenir_next"
            android:text="@string/txt_no_account"
            android:textColor="@color/gray"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_50"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="@dimen/margin_4"
            android:background="@drawable/bg_button_clear"
            android:elevation="5dp"
            android:fontFamily="@font/giveahoot"
            android:maxWidth="300dp"
            android:paddingStart="@dimen/margin_32"
            android:paddingEnd="@dimen/margin_32"
            android:text="@string/btn_register"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnForgotPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_12"
            android:background="@android:color/transparent"
            android:fontFamily="@font/avenir_next"
            android:maxWidth="300dp"
            android:text="@string/btn_forgot_password"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:textStyle="bold" />

        <include
            layout="@layout/banner_powered_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end" />
    </LinearLayout>


</LinearLayout>